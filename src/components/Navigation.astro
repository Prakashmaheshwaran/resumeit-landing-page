</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all navigation elements
    const announcementBar = document.getElementById('announcement-bar');
    const mainNav = document.getElementById('main-nav');
    const desktopNavContainer = document.getElementById('desktop-nav-container');
    const mobileNavContainer = document.getElementById('mobile-nav-container');

    // Single navbar elements
    const activeNavbar = document.getElementById('active-navbar');
    const navLinks = document.getElementById('nav-links');
    const actionButtons = document.getElementById('action-buttons');
    const mobileActiveNavbar = document.getElementById('mobile-active-navbar');
    const mobileActionButtons = document.getElementById('mobile-action-buttons');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const mobileLogo = document.getElementById('mobile-logo');

    // Mobile menu elements
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileCloseBtn = document.getElementById('mobile-close-btn');

    let isScrolled = false;
    let isMobile = false;
    let announcementBarHeight = 44;

    function updateResponsiveDisplay() {
      const screenWidth = window.innerWidth;

      if (screenWidth >= 1024) {
        // Desktop
        isMobile = false;
        desktopNavContainer.style.display = 'block';
        mobileNavContainer.style.display = 'none';
      } else {
        // Mobile/Tablet
        isMobile = true;
        desktopNavContainer.style.display = 'none';
        mobileNavContainer.style.display = 'block';
      }
    }

    function handleScroll() {
      const scrollPosition = window.scrollY;
      const triggerPoint = 150; // Trigger navbar transition

      // Handle navbar position (stick after scrolling past announcement bar)
      if (scrollPosition > announcementBarHeight) {
        mainNav.style.top = '16px';
        announcementBar.style.transform = 'translateY(-100%)';
      } else {
        mainNav.style.top = '60px';
        announcementBar.style.transform = 'translateY(0)';
      }

      // Handle navbar state transitions
      if (scrollPosition > triggerPoint && !isScrolled) {
        // Transition to scrolled state
        if (isMobile) {
          // Mobile: Show action buttons and make logo smaller
          mobileActionButtons.style.display = 'flex';
          mobileLogo.style.fontSize = '14px';
          hamburgerIcon.style.width = '16px';
          hamburgerIcon.style.height = '16px';
          mobileMenuBtn.style.padding = '6px';
          mobileMenuBtn.style.borderRadius = '12px';
        } else {
          // Desktop: Show action buttons
          actionButtons.style.display = 'flex';
          navLinks.style.gap = '4px';
          // Adjust link styling for compact mode
          const links = navLinks.querySelectorAll('a');
          links.forEach(link => {
            link.style.fontSize = '13px';
            link.style.padding = '6px 12px';
          });
        }
        isScrolled = true;
      } else if (scrollPosition <= triggerPoint && isScrolled) {
        // Transition to default state
        if (isMobile) {
          // Mobile: Hide action buttons and restore logo size
          mobileActionButtons.style.display = 'none';
          mobileLogo.style.fontSize = '16px';
          hamburgerIcon.style.width = '18px';
          hamburgerIcon.style.height = '18px';
          mobileMenuBtn.style.padding = '8px';
          mobileMenuBtn.style.borderRadius = '15px';
        } else {
          // Desktop: Hide action buttons
          actionButtons.style.display = 'none';
          navLinks.style.gap = '6px';
          // Restore link styling
          const links = navLinks.querySelectorAll('a');
          links.forEach(link => {
            link.style.fontSize = '14px';
            link.style.padding = '8px 16px';
          });
        }
        isScrolled = false;
      }
    }

    function openMobileMenu() {
      mobileMenu.style.display = 'block';
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.width = '100%';
      document.documentElement.style.overflow = 'hidden';

      // Add fade in animation
      setTimeout(() => {
        mobileMenu.style.opacity = '1';
      }, 10);
    }

    function closeMobileMenu() {
      mobileMenu.style.opacity = '0';

      setTimeout(() => {
        mobileMenu.style.display = 'none';
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.width = '';
        document.documentElement.style.overflow = '';
      }, 300);
    }

    // Event listeners
    mobileMenuBtn.addEventListener('click', openMobileMenu);
    mobileCloseBtn.addEventListener('click', closeMobileMenu);

    // Close mobile menu when clicking on links
    const mobileMenuLinks = mobileMenu.querySelectorAll('a');
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', closeMobileMenu);
    });

    // Handle hover effects for navigation links
    const allNavLinks = document.querySelectorAll('nav a[href^="/"]');
    allNavLinks.forEach(link => {
      link.addEventListener('mouseenter', function() {
        this.style.background = 'rgba(255, 255, 255, 0.1)';
      });
      link.addEventListener('mouseleave', function() {
        this.style.background = 'transparent';
      });
    });

    // Initialize
    updateResponsiveDisplay();
    handleScroll();

    // Event listeners
    window.addEventListener('scroll', handleScroll);
    window.addEventListener('resize', updateResponsiveDisplay);
  });
</script>

