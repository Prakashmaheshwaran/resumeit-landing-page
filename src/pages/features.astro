---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Features - ResumeIt.ai">
  <Navigation />

  <!-- Hero Section -->
  <section class="pb-12 section-spacing relative" style="padding-top: 140px;">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center mb-12">
        <div class="inline-block glass-card px-4 py-2 rounded-full text-sm font-medium text-blue-400 mb-6">
          FEATURES
        </div>
        <h1 class="text-5xl font-bold text-white mb-6">
          Powerful Features for
          <span class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent block mt-2">Modern Job Seekers</span>
        </h1>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto mb-8">
          Our comprehensive suite of AI-powered tools helps you create, optimize, and submit resumes that stand out to both ATS systems and human recruiters.
        </p>
        <button class="btn-primary px-8 py-3 font-semibold flex items-center justify-center space-x-2 mx-auto">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
          <span>Get Started Free</span>
        </button>
      </div>
    </div>
  </section>

  <!-- Main Features -->
  <section class="section-spacing relative">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Chrome Extension -->
        <div class="glass-card glass-hover p-8 rounded-xl blue-glow relative">
          <div class="absolute -top-3 left-6">
            <span class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-3 py-1 text-xs font-semibold rounded-full">Most Popular</span>
          </div>
          <div class="text-center pt-4">
            <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Chrome Extension</h3>
            <p class="text-slate-300 mb-6">
              Seamlessly integrate with your job search workflow. Analyze job descriptions and optimize your resume directly in your browser.
            </p>
            <ul class="space-y-3 text-left">
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-slate-300">Real-time job description analysis</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-slate-300">One-click resume optimization</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-slate-300">Works with all major job boards</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-slate-300">Instant ATS compatibility scoring</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <span class="text-slate-300">Smart keyword suggestions</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Multi-Browser Support -->
        <div class="glass-card glass-hover p-8 rounded-xl blue-glow relative">
          <div class="absolute -top-3 left-6">
            <span class="bg-gradient-to-r from-green-500 to-green-600 text-white px-3 py-1 text-xs font-semibold rounded-full">Universal</span>
          </div>
          <div class="text-center pt-4">
            <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Multi-Browser Support</h3>
            <p class="text-slate-300 mb-6">
              Works across Chrome, Edge, Firefox, and Opera. No matter your preferred browser, we've got you covered.
            </p>
            <ul class="space-y-3 text-left">
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-slate-300">Chrome Web Store extension</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-slate-300">Microsoft Edge Add-ons</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-slate-300">Firefox Browser Add-ons</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-slate-300">Opera Extensions</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <span class="text-slate-300">Consistent experience across all platforms</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- API & Webhooks -->
        <div class="glass-card glass-hover p-8 rounded-xl blue-glow relative">
          <div class="absolute -top-3 left-6">
            <span class="bg-gradient-to-r from-purple-500 to-purple-600 text-white px-3 py-1 text-xs font-semibold rounded-full">Developer Friendly</span>
          </div>
          <div class="text-center pt-4">
            <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">API & Webhooks</h3>
            <p class="text-slate-300 mb-6">
              Integrate our optimization engine into your existing tools and workflows with our robust API and webhook system.
            </p>
            <ul class="space-y-3 text-left">
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <span class="text-slate-300">RESTful API with full documentation</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <span class="text-slate-300">Real-time webhooks for automation</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <span class="text-slate-300">Python SDK available</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <span class="text-slate-300">Node.js SDK coming soon</span>
              </li>
              <li class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <span class="text-slate-300">Rate limiting and authentication</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Features Grid -->
  <section class="section-spacing relative">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Everything You Need to Succeed</h2>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto">
          From optimization to analytics, our platform provides all the tools you need for a successful job search.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Real-time Optimization -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">Real-time Optimization</h4>
          <p class="text-slate-300 text-center mb-4">
            Get instant feedback and suggestions as you edit your resume. Our AI analyzes your content in real-time.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Live spell checking</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Grammar optimization</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Keyword density analysis</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Format validation</span>
            </li>
          </ul>
        </div>

        <!-- ATS Compatibility -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">ATS Compatibility</h4>
          <p class="text-slate-300 text-center mb-4">
            Ensure your resume passes through all major ATS systems with our 95% success rate.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Workday optimization</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <span class="text-sm text-slate-300">SuccessFactors compatibility</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <span class="text-sm text-slate-300">BambooHR support</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Greenhouse integration</span>
            </li>
          </ul>
        </div>

        <!-- Industry Templates -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">Industry-Specific Templates</h4>
          <p class="text-slate-300 text-center mb-4">
            Choose from templates optimized for your specific industry and role type.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-purple-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Tech industry focus</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-purple-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Finance templates</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-purple-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Healthcare formats</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-purple-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Creative portfolios</span>
            </li>
          </ul>
        </div>

        <!-- Job Matching -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">Job Matching</h4>
          <p class="text-slate-300 text-center mb-4">
            Smart matching algorithm that finds the best opportunities based on your optimized resume.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-orange-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Skill-based matching</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-orange-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Location preferences</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-orange-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Salary range filtering</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-orange-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Company culture fit</span>
            </li>
          </ul>
        </div>

        <!-- Analytics Dashboard -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-indigo-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">Analytics Dashboard</h4>
          <p class="text-slate-300 text-center mb-4">
            Track your job search progress with detailed analytics and insights.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-indigo-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Application tracking</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-indigo-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Response rate metrics</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-indigo-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Industry benchmarking</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-indigo-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Success predictions</span>
            </li>
          </ul>
        </div>

        <!-- Export Formats -->
        <div class="glass-card glass-hover p-6 rounded-xl blue-glow">
          <div class="w-12 h-12 bg-gradient-to-r from-pink-500 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white text-center mb-3">Multiple Export Formats</h4>
          <p class="text-slate-300 text-center mb-4">
            Export your optimized resume in various formats for different platforms and use cases.
          </p>
          <ul class="space-y-2">
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-pink-400 rounded-full"></div>
              <span class="text-sm text-slate-300">PDF export</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-pink-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Word document</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-pink-400 rounded-full"></div>
              <span class="text-sm text-slate-300">Plain text version</span>
            </li>
            <li class="flex items-center space-x-2">
              <div class="w-1.5 h-1.5 bg-pink-400 rounded-full"></div>
              <span class="text-sm text-slate-300">LinkedIn format</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <section class="section-spacing relative">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Seamless Integration</h2>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto">
          Works with the tools and platforms you already use
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-2xl font-bold text-white mb-6">Popular Job Boards</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">LinkedIn</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">Indeed</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">Glassdoor</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">ZipRecruiter</div>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-2xl font-bold text-white mb-6">ATS Systems</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">Workday</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">Greenhouse</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">Lever</div>
            </div>
            <div class="glass-card p-4 rounded-lg text-center">
              <div class="font-semibold text-white">BambooHR</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-spacing relative">
    <div class="max-w-4xl mx-auto container-padding text-center">
      <div class="glass-card p-12 rounded-2xl blue-glow">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
