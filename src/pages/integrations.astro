---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Integrations - ResumeIt.ai">
  <Navigation />

  <div style="padding-top: 140px; min-height: 100vh; background: rgb(13, 15, 26); color: white;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 40px 20px;">

      <div style="text-align: center; margin-bottom: 60px;">
        <h1 style="font-size: 48px; font-weight: bold; margin-bottom: 20px; color: white;">Seamless Integrations</h1>
        <p style="font-size: 20px; color: rgb(203, 213, 225); max-width: 600px; margin: 0 auto;">
          Connect ResumeIt.ai with your favorite job search platforms and tools for a streamlined workflow that saves time and improves results
        </p>
      </div>

      <div style="margin-bottom: 60px;">
        <h2 style="font-size: 32px; font-weight: bold; text-align: center; margin-bottom: 40px; color: white;">Popular Integrations</h2>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 25px;">

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">LinkedIn</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Automatically optimize your LinkedIn profile and sync with job applications</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width: 100%; font-weight: 600; cursor: pointer;">Connect LinkedIn</button>
          </div>

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">Indeed</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Auto-apply to relevant jobs with optimized resumes tailored for each posting</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width: 100%; font-weight: 600; cursor: pointer;">Connect Indeed</button>
          </div>

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">Glassdoor</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Research companies and optimize resumes based on insider insights</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width: 100%; font-weight: 600; cursor: pointer;">Connect Glassdoor</button>
          </div>

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">Monster</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Streamline applications on Monster with AI-optimized resumes</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width: 100%; font-weight: 600; cursor: pointer;">Connect Monster</button>
          </div>

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">ZipRecruiter</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Get noticed by top employers with optimized resume submissions</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width: 100%; font-weight: 600; cursor: pointer;">Connect ZipRecruiter</button>
          </div>

          <div style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; padding: 30px; text-align: center;">
            <h3 style="color: white; font-weight: 600; margin-bottom: 15px;">AngelList</h3>
            <p style="color: rgb(203, 213, 225); font-size: 14px; margin-bottom: 20px;">Perfect for startup opportunities with tailored tech resumes</p>
            <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; width-weight: 600; cursor: pointer;">Connect AngelList</button>
          </div>

        </div>
      </div>

      <div style="text-align: center;">
        <h2 style="font-size: 32px; font-weight: bold; margin-bottom: 10px; color: white;">Ready to Connect?</h2>
        <p style="color: rgb(203, 213, 225); margin-bottom: 30px;">
          Start integrating ResumeIt.ai with your favorite platforms today
        </p>
        <button style="background: rgb(59, 130, 246); border: none; color: white; padding: 12px 24px; border-radius: 8px; font-weight: 600; cursor: pointer;">
          Browse All Integrations
        </button>
      </div>

    </div>
  </div>

  <Footer />
</Layout>
