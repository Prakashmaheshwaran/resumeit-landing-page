<style>
  .terms-page {
    padding-top: 140px;
    min-height: 100vh;
    background: rgb(13, 15, 26);
    color: white;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .hero {
    text-align: center;
    margin-bottom: 60px;
  }

  .badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 8px 16px;
    font-size: 14px;
    color: #60A5FA;
    margin-bottom: 20px;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 20px;
    color: white;
  }

  .hero p {
    font-size: 18px;
    color: #CBD5E1;
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
  }

  .section {
    margin-bottom: 40px;
    padding-bottom: 30px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section:last-child {
    border-bottom: none;
  }

  .section h2 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #60A5FA;
  }

  .section h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 15px;
    margin-top: 25px;
    color: white;
  }

  .section p {
    font-size: 16px;
    line-height: 1.7;
    color: #CBD5E1;
    margin-bottom: 15px;
  }

  .section ul {
    list-style-type: disc;
    margin-left: 20px;
    margin-bottom: 15px;
  }

  .section li {
    font-size: 16px;
    line-height: 1.7;
    color: #CBD5E1;
    margin-bottom: 8px;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 36px;
    }
    
    .section h2 {
      font-size: 24px;
    }
  }
</style> 