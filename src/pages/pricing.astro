---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Pricing - ResumeIt.ai">
  <Navigation />

  <!-- Hero Section -->
  <section class="pb-12 section-spacing relative" style="padding-top: 140px;">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center mb-12">
        <div class="inline-block glass-card px-4 py-2 rounded-full text-sm font-medium text-blue-400 mb-6">
          PRICING
        </div>
        <h1 class="text-5xl font-bold text-white mb-6">Simple, Transparent Pricing</h1>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto mb-8">
          Start free and scale as your career grows. Every plan includes our core optimization engine with 95% ATS pass rate.
        </p>

        <!-- Toggle for Annual/Monthly -->
        <div class="inline-flex items-center glass-card rounded-lg p-1">
          <button class="px-4 py-2 text-sm font-medium text-slate-300">Monthly</button>
          <button class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-md">Save 20% with Annual</button>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="section-spacing relative">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        <!-- Basic Plan -->
        <div class="glass-card glass-hover p-8 rounded-xl blue-glow">
          <div class="text-center pb-6 border-b border-white/10">
            <h3 class="text-2xl font-bold text-white">Basic</h3>
            <p class="text-slate-300">Perfect for getting started</p>
            <div class="mt-6">
              <span class="text-5xl font-bold text-white">$12</span>
              <span class="text-slate-400 ml-2 text-lg">per month</span>
            </div>
          </div>

          <div class="pt-6">
            <ul class="space-y-4 mb-8">
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-slate-300">10 resume optimizations per month</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-slate-300">Basic ATS compatibility check</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-slate-300">Chrome extension access</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-slate-300">Standard templates</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-slate-300">Email support</span>
              </li>
            </ul>

            <button class="w-full btn-glass">
              Get Started
            </button>
          </div>
        </div>

        <!-- Pro Plan -->
        <div class="glass-card glass-hover p-8 rounded-xl blue-glow relative scale-105 border-2 border-blue-500/50">
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <span class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 py-2 text-sm font-semibold rounded-full flex items-center space-x-2 shadow-lg">
              <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
